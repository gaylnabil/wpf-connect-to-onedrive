<Window
    x:Class="ConnectToOneDriveAzurePortal.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ConnectToOneDriveAzurePortal"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="AzurePortalWindow"
    Title="MainWindow"
    Width="400"
    Height="450"
    Loaded="AzurePortalWindow_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Connect to OneDrive and get image" />

        <Image
            Name="Logo"
            Grid.Row="1"
            Width="200"
            Height="200"
            Source="https://docs.microsoft.com/en-us/onedrive/developer/rest-api/overview?view=odsp-graph-online" />

        <Button
            Name="button"
            Grid.Row="2"
            Width="200"
            Height="50"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="button_Click"
            Content="Connect to OneDrive" />
    </Grid>
</Window>
